<Window x:Class="Saadiq_Jattiem_POE.LecturerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saadiq_Jattiem_POE"
        mc:Ignorable="d"
        Title="LecturerLogin" Height="450" Width="800">
    <Grid Background="Aquamarine">
        <!---Allows the lecturer to login if their information is stored in the database-->
        <TextBlock Text="Lecturer Login" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBlock Text="Email:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,60,0,0"/>
        <TextBox Name="EmailTextBox" Width="250" HorizontalAlignment="Left" Margin="100,60,0,0" VerticalAlignment="Center"/>

        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,100,0,0"/>
        <PasswordBox Name="PasswordBox" Width="250" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Center"/>

        <Button Content="Sign In" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20" Click="SignInButton_Click"/>
    </Grid>
</Window>
