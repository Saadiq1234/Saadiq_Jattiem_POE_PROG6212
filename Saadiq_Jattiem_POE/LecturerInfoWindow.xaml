<Window x:Class="Saadiq_Jattiem_POE.LecturerInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saadiq_Jattiem_POE"
        mc:Ignorable="d"
        Title="LecturerInfoWindow" Height="450" Width="800">
    <Grid Margin="10" Background="Aquamarine">
        <StackPanel>
            <Label Content="First Name:"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,5"/>

            <Label Content="Last Name:"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,5"/>

            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5"/>

            <Label Content="Phone Number:"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="0,5"/>

            <Label Content="Account Type:"/>
            <TextBox x:Name="AccountTypeTextBox" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button x:Name="SaveButton" Content="Save" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button x:Name="DeleteButton" Content="Delete" Width="100" Click="DeleteButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
